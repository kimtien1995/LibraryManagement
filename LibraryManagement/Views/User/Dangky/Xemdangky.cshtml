@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/UserMasterPage.cshtml";
}

@section Style
{
    <style type="text/css" id="enject">
    #login {
        width: 280px;
    }

    #title {
        text-align: center;
        color: #FFFFFF;
    }
    </style>
}

<div>
    <ul class="breadcrumb">
        <li><a href="index.html">Trang chủ</a> <span class="divider">/</span></li>
        <li class="active">Đăng ký</li>
    </ul>
    <h3> Đăng ký</h3>
    <div class="well">
        <form class="form-horizontal">
            <p><sup>*</sup>Trường bắt buộc nhập</p>
            <div class="control-group">
                <label class="control-label" for="inputFname1">Họ và tên <sup>*</sup>:</label>
                <div class="controls">
                    <input type="text" id="inputFname1" placeholder="Họ và tên">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputLnam">Tên đăng nhập <sup>*</sup>:</label>
                <div class="controls">
                    <input type="text" id="inputLnam" placeholder="Tên đăng nhập">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputPassword1">Mật khẩu <sup>*</sup>:</label>
                <div class="controls">
                    <input type="password" id="inputPassword1" placeholder="Password">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputPassword1">Nhập lại mật khẩu <sup>*</sup>:</label>
                <div class="controls">
                    <input type="password" id="inputPassword1" placeholder="Comfirm password">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputFname1">Email: <sup>*</sup>:</label>
                <div class="controls">
                    <input type="text" id="inputFname1" placeholder="Ngày sinh">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputFname1">Địa chỉ: <sup>*</sup>:</label>
                <div class="controls">
                    <input type="text" id="inputFname1" placeholder="Ngày sinh">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputFname1">Ngày sinh: </label>
                <div class="controls">
                    <input type="text" id="inputFname1" placeholder="Ngày sinh">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputFname1">Số điện thoại: </label>
                <div class="controls">
                    <input type="text" id="inputFname1" placeholder="Số điện thoại">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="aditionalInfo">Mô tả ngắn: </label>
                <div class="controls">
                    <textarea name="aditionalInfo" id="aditionalInfo" cols="26" rows="3" placeholder="Mô tả ngắn"></textarea>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputFname1">Giới tính: </label>
                <div class="controls">
                    <table width="200" border="0">
                        <tbody>
                            <tr>
                                <td><label style="text-align:center">Nam</label></td>
                                <td><input type="checkbox" value="nam"></td>
                                <td><label style="text-align:center">Nữ </label></td>
                                <td><input type="checkbox" value="nu"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputFname1">Ảnh đại diện</label>
                <div class="controls">
                    <input type="file">
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <input type="hidden" name="email_create" value="1">
                    <input type="hidden" name="is_new_customer" value="1">
                    <input class="btn btn-large btn-success" type="submit" value="Đăng ký" />
                </div>
            </div>
    </div>


    </form>
</div>