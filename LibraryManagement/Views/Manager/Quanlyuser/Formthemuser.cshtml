    Layout = "~/Views/Shared/ManagerMasterPage.cshtml";
    ViewBag.TitleAdmin = "Thêm người dùng";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
