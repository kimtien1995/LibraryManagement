@using LibraryManagement.Models;

@{
    Layout = "~/Views/Shared/ManagerMasterPage.cshtml";
    List<DonMuonSach> donmuon = ViewBag.donmuon;
}

@section Style
{
    <style type="text/css" id="enject">
        #sachmoi {
            height: 300px;
        }

        #side {
            height: 200px;
        }

        .captionnb {
            height: 60px;
        }

        .captionsm {
            height: 45px;
        }

        #bookssort .listsort {
            width: 100px;
        }

        #pageindex {
            font-weight: bold;
            font-size: 25px;
            text-align: center;
        }

            #pageindex a {
                font-weight: bold;
                font-size: 20px;
            }

                #pageindex a:hover {
                    color: Blue;
                    cursor: pointer;
                }

        #login {
            width: 280px;
        }

        #title {
            text-align: center;
            color: #FFFFFF;
        }
    </style>

}

<ul class="breadcrumb">
<li><a href="index.html">Trang chủ</a> <span class="divider">/</span></li>
<li class="active">Đơn mượn sách</li>
    </ul>
<h3>Danh sách các đơn mượn sách</h3>
<hr class="soft" />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã đơn mượn</th>
            <th>Người mượn</th>
            <th>Ngày đặt</th>
            <th>Ngày mượn</th>
            <th>Ngày trả</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < donmuon.Count; i++)
            {
            <tr>
                <td>@donmuon[i].madonmuonsach</td>
                <td>@donmuon[i].NguoiDung.hovaten (@donmuon[i].NguoiDung.tendangnhap)</td>
                <td>@donmuon[i].ngaydat</td>
                <td>@donmuon[i].ngaymuon</td>
                <td>@donmuon[i].ngaytra</td>
                <td>@donmuon[i].TrangThai.tentrangthai</td>
                <td>
                    <a href="/QuanLyMuonSach/Xemchitietdonmuon?madon=@donmuon[i].madonmuonsach">Xem</a><b>/</b><a href="/QuanLyMuonSach/Xoa?madon=@donmuon[i].madonmuonsach">Xóa</a><b>/</b><a href="/QuanLyMuonSach/CapNhat?madon=@donmuon[i].madonmuonsach">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
