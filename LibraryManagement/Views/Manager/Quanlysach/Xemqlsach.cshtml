@using LibraryManagement.Models

@{
    ViewBag.Title = "Quản lý sách";
    Layout = "~/Views/Shared/ManagerMasterPage.cshtml";
    List<DauSach> sachs = ViewBag.sachs;
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Danh sách sách</h4>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>Mã sách</th>
                                <th>Tên</th>
                                <th>Bìa</th>
                                <th>Tác giả</th>
                                <th>Ngày đăng</th>
                                <th>Thể loại</th>
                                <th></th>

                            </thead>
                            <tbody>
                                @for (int i = 0; i < 20; i++)
                                {
                                    <tr>
                                        <td>@sachs[i].madausach</td>
                                        <td>@sachs[i].tensach</td>
                                        <td><img id="imgtbl" src="~/Content/BookImg/@sachs[i].bia"></td>
                                        <td>@sachs[i].TacGia.tentacgia</td>
                                        <td>@sachs[i].ngaydang</td>
                                        <td>@sachs[i].ChuDe.tenchude</td>
                                        <th><a href="#">Xóa</a><b>/</b><a href="#">Sửa</a></th>
                                    </tr>
                                }
                                
                            </tbody>
                        </table>

                    </div>
                </div>
                <div id="pageindex">
                    <a href="#">1</a>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a href="#">4 ...</a>
                    <a href="#">8</a>
                </div>
                <div><button type="submit" class="btn btn-info btn-fill pull-right">Thêm sách</button></div>
            </div>

        </div>
    </div>
</div>
