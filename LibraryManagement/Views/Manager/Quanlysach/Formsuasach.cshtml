@using LibraryManagement.Models;

@{
    Layout = "~/Views/Shared/ManagerMasterPage.cshtml";
    ViewBag.TitleAdmin = "Sửa sách";
    DauSach sachs = ViewBag.qlsachsuasach;
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Sửa thông tin sách</h4>
                    </div>
                    <div class="content">
                        <form action="" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>Tên sách</label>
                                        <input type="text" name="tensach" class="form-control" placeholder="Tên sách" value="@sachs.tensach">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Tác giả</label>
                                        <input type="text" name="tacgia" class="form-control" placeholder="Tác giả" value="@sachs.TacGia.tentacgia">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Chủ đề</label>
                                        <input type="text" class="form-control" placeholder="Chủ đề" value="@sachs.ChuDe.tenchude">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Nhà xuất bản</label>
                                        <input type="text" class="form-control" placeholder="Nhà xuất bản" value="@sachs.NhaXuatBan.tennhaxuatban">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Số lượng</label>
                                        <input type="text" class="form-control" placeholder="Số lượng" value="@sachs.soluong">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Ngày đăng</label>
                                        <input type="datetime" class="form-control" value="@sachs.ngaydang">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Giá bán</label>
                                        <input type="text" class="form-control" placeholder="Giá bán" value="@sachs.giaban">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Mô tả ngắn</label>
                                        <textarea rows="5" class="form-control" placeholder="Nhập mô tả (Tóm tắt)">@sachs.tomtat</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Ảnh bìa</label>
                                        <input type="file" class="form-control" value=" @sachs.bia">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>File sách</label>
                                        <input type="file" class="form-control" value="@sachs.filesach">
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-info btn-fill pull-right">Thêm sách</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
            

        </div>
    </div>
</div>
